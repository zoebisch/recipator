<h1>Recipes</h1>

<% Culture.all.each do |culture| %>
  <h3><%= culture.name %></h3>
    <ul>
      <% Recipe.all.each do |recipe| %>
        <% if recipe.culture == culture %>
          <li><a href="/recipes/<%= recipe.slug %>"><%= recipe.name %></a></li>
        <% end %>
      <% end %>
    </ul>
<% end %>

<a href="/recipes/new"><h3>Add a New Recipe</h3></a>
<p><a href="/"><h3>Main Menu</h3></a></p>
